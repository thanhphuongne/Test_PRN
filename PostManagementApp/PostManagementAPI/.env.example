# Database Configuration
# Use either DATABASE_URL (for Render/Heroku format) or ConnectionStrings__DefaultConnection
DATABASE_URL=postgresql://username:password@host:5432/database
# OR
ConnectionStrings__DefaultConnection=Host=host;Port=5432;Database=database;Username=username;Password=password;SSL Mode=Require;Trust Server Certificate=true

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Production

# Server URLs (Render uses PORT environment variable)
ASPNETCORE_URLS=http://+:8080

# CORS Settings (Optional - currently allows all origins)
# If you want to restrict CORS, you'll need to modify Program.cs
AllowedOrigins=https://test-prn.vercel.app

# Logging Level (Optional)
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
